<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.items.ItemFragmentPodcasts">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/item_podcasts_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true">

        </ProgressBar>

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/item_podcasts_track_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/item_podcasts_artist_name"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_podcasts_track_name"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/item_podcasts_image_view"
            android:layout_width="270dp"
            android:layout_height="360dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_podcasts_track_name"/>

        <TextView
            android:id="@+id/item_podcasts_release"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_podcasts_image_view"
            android:text="Release Date"/>

        <TextView
            android:id="@+id/item_podcasts_release_date"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_podcasts_release"/>

    </RelativeLayout>
</ScrollView>